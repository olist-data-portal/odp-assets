# Dagster libraries to run both dagster-webserver and the dagster-daemon. Does not
# need to have access to any pipeline code.
FROM python:3.12-slim

RUN pip install \
    dagster \
    dagster-graphql \
    dagster-webserver \
    dagster-postgres \
    dagster-aws

# Set $DAGSTER_HOME and copy dagster instance and workspace YAML there
ENV DAGSTER_HOME=/opt/dagster/dagster_home/

RUN mkdir -p $DAGSTER_HOME

# Copy dagster.yaml (same for both environments)
COPY dagster_project/dagster_project/dagster.yaml $DAGSTER_HOME/

# Copy both workspace.yaml files
# The startup script will select the appropriate one based on environment
COPY dagster_project/dagster_project/workspace.yaml $DAGSTER_HOME/workspace.yaml.local
COPY dagster_project/dagster_project/workspace.yaml.production $DAGSTER_HOME/workspace.yaml.production

# Copy startup script to select and configure workspace.yaml
COPY dagster_project/dagster_project/startup.sh /opt/dagster/startup.sh
RUN chmod +x /opt/dagster/startup.sh

WORKDIR $DAGSTER_HOME

# Use startup script as entrypoint
ENTRYPOINT ["/opt/dagster/startup.sh"]
